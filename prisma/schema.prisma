// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  description String
  images      String[]     @map("images")
  price       Int
  sizes       ValidSizes[]
  slug        String
  tags        String[]
  title       String       @unique
  inStock     Int
  gender      Genders
  type        Types
  created_at  DateTime     @default(now())
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  email      String    @unique
  password   String
  name       String
  role       String
  created_at DateTime  @default(now())
  updatedAt  DateTime  @default(now())
  //relations
  userData   UserData?
}

model UserData {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  address   String
  zipCode   String
  country   String
  telephone String
  lastname  String
  address2  String
  city      String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId // 
}

enum ValidSizes {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}

enum Genders {
  men
  women
  kid
  unisex
}

enum Types {
  shirts
  pants
  hoodies
  hats
}
